# BarcodeBite backend production environment template
# Copy to your secret manager (do not commit real values).

DATABASE_URL=jdbc:postgresql://<host>:5432/<db>
DATABASE_USER=<db-user>
DATABASE_PASSWORD=<db-password>
DATABASE_MAX_POOL_SIZE=16

JWT_SECRET=<at-least-32-characters-random-secret>
JWT_ISSUER=barcodebite.app
JWT_AUDIENCE=barcodebite-users
JWT_EXPIRES_IN_HOURS=24

OPEN_FOOD_FACTS_URL=https://world.openfoodfacts.org/api/v2
OPEN_FOOD_FACTS_USER_AGENT=BarcodeBite/1.0 (support@barcodebite.app)
OPEN_FOOD_FACTS_TIMEOUT_MS=5000

# Ktor/Render runtime
PORT=8080
